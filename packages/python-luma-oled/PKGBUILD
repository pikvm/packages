pkgname=python-luma-oled
pkgver=3.14.0
pkgrel=2
pkgdesc="Python module to drive OLED displays"
url="https://github.com/rm-hull/luma.oled"
license=(MIT)
arch=(any)
depends=(
	"python>=3.14"
	"python<3.15"
	python-luma-core
)
makedepends=(python-distribute)
source=("https://github.com/rm-hull/luma.oled/archive/refs/tags/$pkgver.tar.gz")
sha1sums=(SKIP)


package() {
	cd "$srcdir/luma.oled-$pkgver"
	python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
